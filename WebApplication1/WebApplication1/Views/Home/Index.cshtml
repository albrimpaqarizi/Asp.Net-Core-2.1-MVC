<!--== SlideshowBg Area Start ==-->
<section id="slideslow-bg" style="height: 789px;" class="vegas-container">
        <div class="vegas-slide vegas-transition-fade vegas-transition-fade-in vegas-transition-fade-out" style="transition: all 2000ms ease 0s;">
           <div class="vegas-slide-inner vegas-animation-kenburnsUpLeft" style="background-image: url(&quot;assets/img/slider-img/slider-img-2.jpg&quot;); background-color: rgb(0, 0, 0); background-position: center center; background-size: cover; animation-duration: 20000ms;"></div>
