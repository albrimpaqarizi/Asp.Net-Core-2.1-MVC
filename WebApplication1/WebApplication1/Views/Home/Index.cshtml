                            <div class="book-ur-car">
                                <form asp-controller="Home" asp-action="Cars" method="get">

                                    <div class=" bookinput-item">
                                        <div class=" input-group">
                                            <input type="text" name="searchString" value="@ViewData["currentFilter"]" placeholder="Car Name" />
                                        </div>
                                    </div>
                                    <div class="bookcar-btn bookinput-item">
                                        <input type="submit" value="Filtro" />
                                    </div>
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
