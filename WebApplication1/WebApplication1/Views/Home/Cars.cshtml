@model PaginatedList<WebApplication1.Models.Cars>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";

    ViewBag.Title = "Cars";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Our Cars</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>

<section id="car-list-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Sidebar Area Start -->
            <div class="col-lg-4">
                <div class="sidebar-content-wrap">
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>For More Informations</h3>

                        <div class="sidebar-body">
                            <p><i class="fa fa-mobile"></i> +8801816 277 243</p>
                            <p><i class="fa fa-clock-o"></i> Mon - Sat 8.00 - 18.00</p>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>Product Filters</h3>

                        <div class="sidebar-body">
                            <form class="form-inline my-2 my-lg-0">
                                <input class="form-control mr-sm-2 pr-2 ml-3" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                            </form>
                            <hr />
                            <form class="col-12">
                                <div class="form-group">
                                    <label for="inputState1" class="col-form-label">Transmission</label>
                                    <select id="inputState1" class="form-control">
                                        <option selected>Choose...</option>
                                        <option value="auto">Auto</option>
                                        <option value="manual">Manual</option>
                                    </select>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-3 p-1 m-1 mr-2">
                                        <input type="checkbox" class="form-control" id="inlineCheckbox1" value="abs" />
                                    </div>
                                    <div class="col-sm-8">
                                        <label for="inlineCheckbox1" class="col-form-label">AirConditioning</label>
                                    </div>
                                </div>
                            </form>
                            <hr />
                            <h5 class="pb-2">Car Brands</h5>
                            <ul class="list-group list-group-flush recent-tips">
                                <li class="list-group-item">Dapibus ac facilisis in</li>
                                <li class="list-group-item">Morbi leo risus</li>
                                <li class="list-group-item">Porta ac consectetur ac</li>
                            </ul>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>Connect with Us</h3>

                        <div class="sidebar-body">
                            <div class="social-icons text-center">
                                <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-behance"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-linkedin"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-dribbble"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                </div>
            </div>
            <!-- Sidebar Area End -->
            <!-- Car List Content Start -->
            <div class="col-lg-8">

                <div class="car-list-content m-t-50">
                    <!-- Single Car Start -->
                    <div class="row">
                        <div class="col-12 pr-0 pl-0">

                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <a class="btn btn-info btn-sm mr-3" role="button" asp-controller="Home" asp-action="Cars" asp-route-sortOrder="nameUp">
                                        OrderBy <i class="fas fa-sort-alpha-down"></i>
                                    </a>
                                    <a class="btn btn-info btn-sm mr-3" role="button" asp-controller="Home" asp-action="Cars" asp-route-sortOrder="nameDown">
                                        OrderBy <i class="fas fa-sort-alpha-up"></i></i>
                                    </a>
                                    <a class="btn btn-info btn-sm mr-3" role="button" asp-controller="Home" asp-action="Cars" asp-route-sortOrder="priceUp">
                                        Price <i class="fas fa-sort-amount-up"></i>
                                    </a>
                                    <a class="btn btn-info btn-sm mr-3" role="button" asp-controller="Home" asp-action="Cars" asp-route-sortOrder="priceDown">
                                        Price <i class="fas fa-sort-amount-down"></i>
                                    </a>
                                </ol>
                            </nav>
                        </div>
                        @foreach (var item in Model)
                        {
                            <div class="col-12 single-car-wrap ">
                                <div class="row">
                                    <!-- Single Car Thumbnail -->
                                    <div class="col-lg-5 pl-0">
                                        <img class="car-list-thumb" src="~/images/@item.Image" alt="">
                                    </div>
                                    <!-- Single Car Thumbnail -->
                                    <!-- Single Car Info -->
                                    <div class="col-lg-7">
                                        <div class="display-table">
                                            <div class="display-table-cell">
                                                <div class="car-list-info">
                                                    <h2><a href="#">@item.Name</a></h2>
                                                    <h5>€@item.Price Rent/per day</h5>
                                                    <p>@item.Description</p>
                                                    <ul class="tech-info-list">
                                                        <div class="row">
                                                            <div class="col-12 table-bordered m-2" >

                                                                @if (item.ABS == true)
                                                                {
                                                                    <li>ABS</li>
                                                                }
                                                                @if (item.Casco == true)
                                                                {
                                                                    <li>Casco</li>
                                                                }
                                                                @if (item.FullToFull == true)
                                                                {
                                                                    <li>FullToFull</li>
                                                                }

                                                                @if (item.AirConditioning == true)
                                                                {
                                                                    <li>AirConditioning</li>
                                                                }

                                                            </div>
                                                        </div>
                                                    </ul>
                                                    <a asp-area="" asp-controller="Cars" asp-action="Details" asp-route-id="@item.Id" class="rent-btn">Book it</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Single Car info -->
                                </div>
                            </div>
                        }
                    </div>
                    <!-- Single Car End -->
                </div>

                <!-- Page Pagination Start -->
                <div class="page-pagi">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a asp-action="Cars"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-page="@(Model.PageIndex - 1)"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   class="btn btn-default  @prevDisabled">
                                    Previous
                                </a>
                            </li>
                            <li class="page-item"><a class="btn btn-default" href="#">1</a></li>
                            <li class="page-item"><a class="btn btn-default" href="#">2</a></li>
                            <li class="page-item"><a class="btn btn-default" href="#">3</a></li>
                            <li class="page-item"><a class="btn btn-default" href="#">4</a></li>
                            <li class="page-item"><a class="btn btn-default" href="#">5</a></li>
                            <li class="page-item">
                                <a asp-action="Cars"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-page="@(Model.PageIndex + 1)"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   class="btn btn-default  @nextDisabled">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- Page Pagination End -->
            </div>
            <!-- Car List Content End -->
        </div>
    </div>
</section>

