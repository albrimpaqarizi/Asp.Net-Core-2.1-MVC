@model WebApplication1.Models.Cars

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section id="car-list-area" class="section-padding">
    <div class="container pt-5">
        <div class="row">
            <!-- Car List Content Start -->
            <div class="col-lg-8">
                <div class="car-details-content">
                    <h2> @Model.Name<span class="price">Rent: <b>$@Model.Price</b></span></h2>
                    <div class="car-preview-crousel owl-carousel owl-theme owl-loaded">
                        <div class="owl-stage-outer">
                            @if (Model.Image != null)
                            {
                                <img src="~/images/@Model.Image" />
                            }
                            else
                            {
                                @: No image
                            }
                        </div><div class="owl-controls"><div class="owl-nav"><div class="owl-prev" style="display: none;">prev</div><div class="owl-next" style="display: none;">next</div></div><div class="owl-dots" style=""><div class="owl-dot"><span></span></div><div class="owl-dot"><span></span></div><div class="owl-dot active"><span></span></div></div></div>
                    </div>
                    <div class="car-details-info">
                        <h4>Additional Info</h4>
                        <p>@Model.Description</p>

                        <div class="technical-info">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="tech-info-table">
                                        <table class="table table-bordered">
                                            <tbody>
                                                <tr>
                                                    <th>Location</th>
                                                    <td>@Model.Location</td>
                                                </tr>
                                                <tr>
                                                    <th>Company Name</th>
                                                    <td>@Model.CompanyName</td>
                                                </tr>
                                                <tr>
                                                    <th>Transmission</th>
                                                    <td>@Model.Transmission</td>
                                                </tr>
                                                <tr>
                                                    <th>Fuel</th>
                                                    <td>@Model.Fuel</td>
                                                </tr>
                                                <tr>
                                                    <th>Doors</th>
                                                    <td>@Model.Doors</td>
                                                </tr>
                                                <tr>
                                                    <th>Seats</th>
                                                    <td>@Model.Seats</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="col-lg-5">
                                    <div class="tech-info-list">
                                        <ul>
                                            @if (Model.ABS == true)
                                            {
                                                <li>ABS</li>
                                            }
                                            @if (Model.Casco == true)
                                            {
                                                <li>Casco</li>
                                            }
                                            @if (Model.FullToFull == true)
                                            {
                                                <li>FullToFull</li>
                                            }
                                            @if (Model.AirConditioning == true)
                                            {
                                                <li>AirConditioning</li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="review-area">
                            <h3 class="mb-2">Be the first to review “   @Model.Name”</h3>
                            <div class="review-form">
                                <form action="index.html">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6">
                                            <div class="name-input">
                                                <input type="text" placeholder="Full Name">
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-md-6">
                                            <div class="email-input">
                                                <input type="email" placeholder="Email Address">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="message-input">
                                        <textarea name="review" cols="30" rows="5" placeholder="Write Your Feedback Here!"></textarea>
                                    </div>

                                    <div class="input-submit">
                                        <button type="submit">Submit</button>
                                        <button type="reset">Clear</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Car List Content End -->
            <!-- Sidebar Area Start -->
            <div class="col-lg-4">
                <div class="sidebar-content-wrap m-t-50">
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>For More Informations</h3>

                        <div class="sidebar-body">
                            <p><i class="fa fa-mobile"></i> +383 XX XXX XXX</p>
                            <p><i class="fa fa-clock-o"></i> Mon - Fri 9:00 - 22:00</p>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                    <!-- Single Sidebar Start -->
