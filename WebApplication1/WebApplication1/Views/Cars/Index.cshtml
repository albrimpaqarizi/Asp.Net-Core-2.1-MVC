@model IEnumerable<WebApplication1.Models.Cars>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5 pt-5">
    <p class="mt-5 pt-5">
        <a class="btn btn-info" asp-action="Create">Create New</a>
    </p>
    <hr />
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fuel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Transmission)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostedDate)
                    </th>
                    <th> Options for</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(item => item.PostedDate))
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fuel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Transmission)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostedDate)
                    </td>
                    <td class="table-active">
                        <a class="btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                        <a class="btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                        <a class="btn-sm btn-info" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Administrator"))
                            {
                                <a class="btn-sm btn-info" asp-action="ManageUsers" asp-route-id="@item.Id">Manage users</a>
                            }
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
